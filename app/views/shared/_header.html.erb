<div class="bg-white flex justify-between items-center px-2" data-controller="menu">
  <h1 class='mx-2 text-red-500 font-bold' >Commerce App</h1>
  
  <button class="sm:hidden" data-action="click->menu#toggle">
    <%= image_tag 'icons/menu.svg', width: 35, height: 35 %>
  </button>

  <!-- Desktop menu -->
  <div class="hidden sm:block">
    <%= render partial: 'shared/items' %>
  </div>

  <!-- Mobile menu -->
  <div
    class="gap-4 sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full"
    data-menu-target="items">
    <button class="mb-4" data-action="click->menu#toggle">
      <%= image_tag 'icons/close.svg', width: 35, height: 35 %>
    </button>

    <%= render partial: 'shared/items' %>
  </div>
</div>
